{
  "name": "twitter-dataviz",
  "version": "1.0.0",
  "description": "Visualises real-time data from the Twitter Streaming API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:dev": "DEBUG=server,dataviz,auth,user,db nodemon server.js",
    "start:debug": "DEBUG=* nodemon server.js",
    "test": "xo",
    "watch": "concurrently \"npm run browsersync\" \"npm run colors\" \"npm run map\" \"npm run css\"",
    "browsersync": "browser-sync start --proxy \"localhost:3000\" --files \"client/build/*\" \"views/**/*.ejs\"",
    "colors": "watchify client/src/colors.js -t babelify -g uglifyify -o client/build/colors.js",
    "map": "watchify client/src/map.js -t babelify -g uglifyify -o client/build/map.js",
    "css": "watch \"cleancss -o client/build/build.min.css client/src/main.css\" client/src",
    "build-colors": "browserify client/src/colors.js -t babelify -g uglifyify -o client/build/colors.js",
    "build-map": "browserify client/src/map.js -t babelify -g uglifyify -o client/build/map.js",
    "build-css": "cleancss -o client/build/build.min.css client/src/main.css",
    "deploy": "pm2 deploy production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nickrttn/twitter-dataviz.git"
  },
  "keywords": [
    "datavisualisation",
    "node",
    "javascript",
    "twitter"
  ],
  "author": "Nick Rutten <hello@nickrttn.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nickrttn/twitter-dataviz/issues"
  },
  "homepage": "https://github.com/nickrttn/twitter-dataviz#readme",
  "dependencies": {
    "connect-redis": "^3.2.0",
    "d3-geo": "^1.6.3",
    "d3-request": "^1.0.5",
    "d3-selection": "^1.0.5",
    "d3-time": "^1.0.6",
    "debug": "^2.6.6",
    "dotenv": "^4.0.0",
    "ejs": "^2.5.6",
    "express": "^4.15.2",
    "express-session": "^1.15.2",
    "redis": "^2.7.1",
    "socket.io": "^1.7.3",
    "socket.io-client": "^1.7.3",
    "superagent": "^3.5.2",
    "topojson-client": "^3.0.0",
    "twitter": "^1.7.0",
    "virtual-dom": "^2.1.1"
  },
  "devDependencies": {
    "babel-preset-env": "^1.4.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.11",
    "browserify": "^14.3.0",
    "clean-css-cli": "^4.1.2",
    "concurrently": "^3.4.0",
    "mongodb": "^2.2.26",
    "nodemon": "^1.11.0",
    "uglifyify": "^3.0.4",
    "watch": "^1.0.2",
    "watchify": "^3.9.0",
    "xo": "^0.18.1"
  },
  "xo": {
    "envs": [
      "browser",
      "node"
    ]
  }
}
